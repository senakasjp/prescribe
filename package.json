{
  "name": "prescribe-patient-management",
  "version": "1.0.0",
  "description": "Patient Management System with Svelte and Firebase",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "firebase emulators:exec --only firestore,auth \"vitest run\"",
    "test:security:rules": "firebase emulators:exec --only firestore \"vitest run src/tests/integration/firestoreRules.security.test.js\"",
    "test:security:deps": "npm audit --audit-level=high",
    "test:security:ci": "npm run test:security:rules && npm run test:security:deps",
    "backfill:doctor-uid": "node functions/scripts/backfillDoctorUid.cjs",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@playwright/test": "^1.58.2",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "baseline-browser-mapping": "^2.9.19",
    "firebase-mock": "^2.2.4",
    "happy-dom": "^20.5.0",
    "jsdom": "^27.0.0",
    "svelte": "^4.2.0",
    "vite": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.13",
    "@fortawesome/fontawesome-free": "^6.5.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.18",
    "@tinymce/tinymce-svelte": "^3.2.0",
    "apexcharts": "^3.46.0",
    "autoprefixer": "^10.4.21",
    "chart.js": "^4.5.0",
    "firebase": "^12.2.1",
    "flowbite": "^3.1.2",
    "jsbarcode": "^3.12.3",
    "jspdf": "^4.1.0",
    "openai": "^5.20.2",
    "postcss": "^8.5.6",
    "shepherd.js": "^14.1.0",
    "tailwindcss": "^3.4.17",
    "tinymce": "^8.1.2"
  }
}
